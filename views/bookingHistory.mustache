<!-- 
  Booking History Page Template
  - Lists all bookings made by the logged-in user.
  - For each booking, displays course name, booking date, user name, email, and course details (date, time, location).
  - Provides buttons to view course details and cancel the booking.
  - If no bookings exist, shows a message indicating so.
  - Includes a link to go back to the courses page.
-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{title}}</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  {{> header}}
  <div class="container mt-4">
    <h1>{{title}}</h1>
    {{#bookings}}
      <div class="card mt-3">
        <div class="card-body">
          <p><strong>Course/Class:</strong> {{courseName}}</p>
          <p><strong>Booked On:</strong> {{bookedOn}}</p>
          <p><strong>Your Name:</strong> {{userName}}</p>
          <p><strong>Your Email:</strong> {{email}}</p>
          {{#date}}
            <p><strong> Date:</strong> {{date}}</p>
          {{/date}}
          {{#time}}
            <p><strong>Time:</strong> {{time}}</p>
          {{/time}}
          {{#location}}
            <p><strong>Location:</strong> {{location}}</p>
          {{/location}}
          <a href="/course/{{courseId}}" class="btn btn-primary mt-2">View Details</a>
          <a href="/book/cancel/{{_id}}" class="btn btn-danger mt-2"onclick="return confirm('Are you sure?');">Cancel Booking</a>
        </div>
      </div>
    {{/bookings}}
    {{^bookings}}
      <p>You haven't made any bookings yet.</p>
    {{/bookings}}
    <a href="/courses" class="btn btn-secondary mt-3">Courses and Classes</a>
  </div>
  {{> footer}}
</body>
</html>
