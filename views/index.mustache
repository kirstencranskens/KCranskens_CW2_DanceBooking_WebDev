<!-- 
  Homepage Template
  - Displays the main landing page for Prism Dance Studio.
  - Shows a banner image at full width, a welcome message, and a link to view courses.
  - If the logged-in user is an organiser, displays a button to add new updates.
  - Lists recent updates in a scrollable container, and organisers see a "Delete Update" button for each update.
  - Includes header and footer partials.
-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dance Booking System</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  {{> header}}
        <div class="main-content">
          <div class="container mt-4">
            <h1>Welcome to Prism Dance Studio</h1>
            <img src="/banner.svg" alt="Prism Dance Studio" class="img-fluid mb-4" style="width:100%;">
            <a href="/courses" class="btn btn-primary">View Courses and Classes </a>
            {{#user.organiser}}
              <a href="/organiser/new-update" class="btn btn-info">Add Update</a>
            {{/user.organiser}}
            <div class="updates-container mt-4">
        {{#updates}}
          <div class="card mt-4">
            <div class="card-body">
              <h3>{{title}}</h3>
              <p>{{content}}</p>
              <p class="text-muted"><small>Posted on: {{createdAt}}</small></p>
              {{#user.organiser}}
                <a href="/organiser/updates/delete/{{_id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this update?');">Delete Update</a>
              {{/user.organiser}}
            </div>
          </div>
        {{/updates}}
        {{^updates}}
          <p class="mt-4">No updates available at this time.</p>
        {{/updates}}
      </div>
    </div>
  </div>

  {{> footer}}
</body>
</html>
