<!-- 
  Booking Options Page Template
  - Provides options for the user before making a booking.
  - Users can log in, register, or continue as a guest.
  - Displays a 'Back to Courses' button.
  - Wrapped in a container with consistent styling.
-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{title}}</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  {{> header}}
  <div class="container mt-4">
    <div class="booking-options-card p-4 mx-auto" style="max-width: 500px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); border-radius: 8px; background-color: var(--cream);">
      <h1 class="text-center mb-4">Make Booking</h1>
      <p class="text-center">Please choose an option before booking:</p>
      <div class="d-flex justify-content-around flex-wrap mb-3">
        <a href="/login?redirect=/book/{{courseId}}" class="btn btn-primary mb-2">Log In</a>
        <a href="/register?redirect=/book/{{courseId}}" class="btn btn-secondary mb-2">Register</a>
        <a href="/book/{{courseId}}" class="btn btn-success mb-2">Continue as Guest</a>
      </div>
      <div class="text-center">
        <a href="/courses" class="btn btn-secondary">Back</a>
      </div>
    </div>
  </div>
  {{> footer}}
</body>
</html>

