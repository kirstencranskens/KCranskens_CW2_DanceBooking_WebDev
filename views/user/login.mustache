<!-- 
  Login Page Template
  - Displays a centered login card.
  - Shows an error message if one is provided.
  - Contains a form with email and password fields.
  - Submits the form data to "/login".
  - Also includes a link to the registration page.
-->

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{title}}</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"> 
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  {{> header}}
  <div class="container">
    <div class="login-card">
      <h1 class="text-center mb-4">{{title}}</h1>
      {{#error}}
        <div class="alert alert-danger">{{.}}</div>
      {{/error}}
      <form method="POST" action="/login">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="text" id="email" name="email" placeholder="email" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="password" class="form-control" required>
        </div>
        <!-- Hidden redirect input -->
        <input type="hidden" name="redirect" value="{{redirect}}">
        <input type="submit" value="Sign In" class="btn btn-primary btn-block">
      </form>
      <div class="text-center mt-3">
        <a href="/register" class="btn btn-secondary btn-block">Register</a>
      </div>
    </div>
  </div>
</body>
</html>
{{> footer}}
